section(id='intro').section.intro.coaching
    .section-body
        .container
            .row
                .intro-wrapper.col-md-12.col-xs-12
                    .intro-top
                        h1.brand-heading
                            =subtitel1
                            br
                            small=subtitel2


                        p.intro-text
                            =intro

                    .intro-bottom.page-scroll
                            a.button(href=menulink2)
                                =knopintro


                    .language.hidden-xs
                        .btn-toolbar(role='toolbar')
                            .btn-group
                                a(href='/coaching')
                                    span.flag-icon.flag-nl-32
                                a(href='/en_coaching')
                                    span.flag-icon.flag-gb-32
                                a(href='/fr_coaching')
                                    span.flag-icon.flag-fr-32

